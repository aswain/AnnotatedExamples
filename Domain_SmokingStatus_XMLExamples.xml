<?xml version="1.0" encoding="UTF-8"?>
<!-- Smoking Status Domain Examples -->

<!-- *********** Example 1: Patient is a former smoker *********** -->
<component>
    <section>
        <!--  Social history section -->
        <templateId root="2.16.840.1.113883.10.20.22.2.17"/>
        <code code="29762-2" codeSystem="2.16.840.1.113883.6.1"
            displayName="Social History"/>
        <title>SOCIAL HISTORY</title>
        <text>
            <table border="1" width="100%">
                <thead>
                    <tr>
                        <th>Social History Observation</th>
                        <th>Description</th>
                        <th>Dates Observed</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Smoking Status</td>
                        <td>Former smoker</td>
                        <td>February, 2009 - February, 2011</td>
                    </tr>
                    <tr>
                        <td>Tobacco Use</td>
                        <td>Moderate cigarette smoker, 10-19/day</td>
                        <td>February, 2009 - February, 2011</td>
                    </tr>
                </tbody>
            </table>
        </text>
        
        <!-- The smoking status observation contrains the tobacco use template to represent the patient's smoking status for MU2 -->
        <entry>
            <observation classCode="OBS" moodCode="EVN">
                <!-- Smoking status observation template -->
                <templateId root="2.16.840.1.113883.10.20.22.4.78"/>
                <code code="229819007" codeSystem="2.16.840.1.113883.6.96"
                    displayName="Tobacco use and exposure"/>
                <statusCode code="completed"/>
                
                <!-- The effectiveTime reflects the time period for the smoking habit observed -->
                <effectiveTime>
                    <!-- The low value represents when the patient was known to begin smoking -->
                    <low value="20090216"/>
                    <!-- The high value represents when the patient was known to no longer be smoking -->
                    <high value="20110220"/>
                </effectiveTime>
                
                <!-- Common MU Data Set: smoking status; 
                    vocab requirement: 8 IHTSDO SNOMED CT® codes are allowable for MU2, including a code for unknown smoking status -->
                <value xsi:type="CD" code="8517006" displayName="Former smoker"
                    codeSystem="2.16.840.1.113883.6.96"/>
                
                <!-- This author participant indicates the provider who observed the smoking status -->
                <author>
                    <time value="201201221145-0800"/>
                    <assignedAuthor>
                        <id extension="555555555" root="2.16.840.1.113883.4.6"/>
                        <!-- This ID points back to a provider described in the header -->
                    </assignedAuthor>
                </author>
            </observation>
        </entry>
        
        <!-- The tobacco use template is used to represent additional detail about a patient's tobacco use -->
        <entry>
            <observation classCode="OBS" moodCode="EVN">
                <!-- Tobacco use -->
                <templateId root="2.16.840.1.113883.10.20.22.4.85"/>
                <id root="45efb604-7049-4a2e-ad33-d38556c9636c"/>
                <code code="229819007" codeSystem="2.16.840.1.113883.6.96"
                    displayName="Tobacco use and exposure"/>
                <statusCode code="completed"/>
                
                <!-- The tobacco use was observed from Feb 2009-Feb 2011 -->
                <effectiveTime>
                    <!-- The low value reflects the start date of the observation -->
                    <low value="20090214"/>
                    <!-- The high value reflects the end date of the observation -->
                    <high value="20110215"/>
                </effectiveTime>
                
                <!-- The value is from the tobacco use and exposure finding hierarchy in SNOMED CT® -->
                <value xsi:type="CD" code="160604004"
                    displayName="Moderate cigarette smoker, 10-19/day"
                    codeSystem="2.16.840.1.113883.6.96"/>
                <!-- The patient was a moderate cigarette smoker (10-19/day) from Feb 2009-Feb 2011 -->
                
                <!-- This author participant indicates the provider who observed the tobacco use -->
                <author>
                    <time value="201209101145-0800"/>
                    <assignedAuthor>
                        <id extension="555555555" root="2.16.840.1.113883.4.6"/>
                        <!-- This ID points back to a provider described in the header -->
                    </assignedAuthor>
                </author>
            </observation>
        </entry>
    </section>
</component>
        
        
<!-- *********** Example 2: Patient's smoking status is unknown *********** -->
<component>
    <section>
        <!--  Social history section -->
        <templateId root="2.16.840.1.113883.10.20.22.2.17"/>
        <code code="29762-2" codeSystem="2.16.840.1.113883.6.1"
            displayName="Social History"/>
        <title>SOCIAL HISTORY</title>
        <text>
            <table border="1" width="100%">
                <thead>
                    <tr>
                        <th>Social History Observation</th>
                        <th>Description</th>
                        <th>Dates Observed</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Smoking Status</td>
                        <td>Unknown if ever smoked</td>
                        <td>September 10, 2012</td>
                    </tr>
                </tbody>
            </table>
        </text>
        
        <!-- The smoking status observation contrains the tobacco use template to represent the patient's smoking status for MU2 -->
        <entry>
            <observation classCode="OBS" moodCode="EVN">
